@model Urun
@{
    Layout = "_AdminLayout";
}

<div class="row">
    <div class="col">
        <div class="card">
            <div class="card-body text-center">
                <p>
                    @Model.UrunAd isimli ürünü  silmek istiyormusunuz?
                </p>
                <form asp-controller="Urun" asp-action="DeleteConfirm" method="post">
                <input type="hidden" name="id" value="@Model.Id">
                <button type="submit" class="btn btn-danger">Sil</button>
                <a class="btn btn-primary" asp-controller="Urun" asp-action="index">Iptal</a>
                </form>
            </div>
        </div>
    </div>
</div>
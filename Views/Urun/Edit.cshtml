@model UrunEditModel
@{
    Layout = "_AdminLayout";
}

<form method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-9">
            <div class="card shadow">
                <div class="card-header py-1 d-flex justify-content-between align-items-center">
                    <h5 class="card-title">Ürün Guncelle</h5>
                    <a href="urun.html" class="btn btn-sm btn-primary">
                        <i class="fa-solid fa-list"></i>
                    </a>
                </div>
                <div class="card-body">
                        <input type="hidden" asp-for="Id">
                        <input type="hidden" asp-for="ResimAdi">
                        <div class="row mb-3">
                            <label asp-for="UrunAd" class="col-sm-2 col-form-label">Urun Ad</label>
                            <div class="col-sm-10">
                                <input asp-for="UrunAd" class="form-control">
                                <span asp-validation-for="UrunAd" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label asp-for="Aciklama" class="col-sm-2 col-form-label">Aciklama</label>
                            <div class="col-sm-10">
                                <textarea asp-for="Aciklama" rows="3" class="form-control"></textarea>
                                <span asp-validation-for="Aciklama" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label asp-for="Fiyat" class="col-sm-2 col-form-label">Fiyat</label>
                            <div class="col-sm-10">
                                <input asp-for="Fiyat" class="form-control">
                                <span asp-validation-for="Fiyat" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label asp-for="Active" class="col-sm-2 col-form-label">Aktif</label>
                            <div class="col-sm-10">
                                <input asp-for="Active" class="form-check-input">
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label asp-for="Anasayfa" class="col-sm-2 col-form-label">Anasayfa</label>
                            <div class="col-sm-10">
                                <input asp-for="Anasayfa" class="form-check-input">
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label asp-for="KategoriId" class="col-sm-2 col-form-label">Kategori</label>
                            <div class="col-sm-10">
                                <select asp-for="KategoriId" class="form-select">
                                    <option value="" selected>Seçiniz</option>
                                    @foreach(var kategori in (List<Kategori>)ViewData["Kategoriler"]!)
                                    {
                                        <option value="@kategori.Id" >@kategori.KategoriAdi</option>
                                    }
                                </select>
                                <span asp-validation-for="KategoriId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-sm-10 offset-sm-2">
                                <button type="submit" class="btn btn-primary">Kaydet</button>
                            </div>
                        </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow">
                <div class="card-body">
                    <img src="~/img/@Model.ResimAdi" class="img-thumbnail" alt="">
                    <input asp-for="Resim" class="form-control mt-3">
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}